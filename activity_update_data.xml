<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateData"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/activity_update_arac_tvıd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/AracAdet"/>

    <EditText
        android:id="@+id/activity_update_arac_etıd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="10"
        android:layout_alignStart="@id/activity_update_arac_tvıd"
        android:layout_below="@id/activity_update_arac_tvıd"
        tools:ignore="LabelFor">
        <requestFocus/>
    </EditText>

    <TextView
        android:id="@+id/activity_update_arac_tvmarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_etıd"
        android:layout_below="@id/activity_update_arac_etıd"
        android:layout_marginTop="10dp"
        android:text="@string/AracAdi"/>

    <EditText
        android:id="@+id/activity_update_arac_etmarka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_tvmarka"
        android:layout_below="@id/activity_update_arac_tvmarka"
        android:inputType="text"
        android:maxLength="40"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/activity_update_arac_tvyil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_etmarka"
        android:layout_below="@id/activity_update_arac_etmarka"
        android:layout_marginTop="10dp"
        android:text="@string/AracYıl"/>

    <EditText
        android:id="@+id/activity_update_arac_etyil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_tvyil"
        android:layout_below="@id/activity_update_arac_tvyil"
        android:inputType="date"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/activity_update_arac_tvplaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_etyil"
        android:layout_below="@id/activity_update_arac_etyil"
        android:layout_marginTop="10dp"
        android:text="@string/AracPlaka"/>

    <EditText
        android:id="@+id/activity_update_arac_etplaka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_tvplaka"
        android:layout_below="@id/activity_update_arac_tvplaka"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/activity_update_arac_tvvergi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_etplaka"
        android:layout_below="@id/activity_update_arac_etplaka"
        android:layout_marginTop="10dp"
        android:text="@string/Vergi"/>

    <EditText
        android:id="@+id/activity_update_arac_etvergi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_tvvergi"
        android:layout_below="@id/activity_update_arac_tvvergi"
        android:inputType="date"
        tools:ignore="LabelFor"
        android:maxLength="100" />

    <TextView
        android:id="@+id/activity_update_arac_tvverildi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_update_arac_etplaka"
        android:layout_alignStart="@id/activity_update_arac_etplaka"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="70dp"
        android:text="@string/Verildi" />

    <EditText
        android:id="@+id/activity_update_arac_etverildi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_update_arac_tvvergi"
        android:layout_alignStart="@id/activity_update_arac_tvvergi"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="67dp"
        android:inputType="date"
        android:maxLength="100"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/activity_update_arac_tvzimmet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_update_arac_etplaka"
        android:layout_alignStart="@id/activity_update_arac_etplaka"
        android:layout_marginStart="2dp"
        android:layout_marginTop="140dp"
        android:text="@string/Zimmet" />

    <EditText
        android:id="@+id/activity_update_arac_etzimmet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_update_arac_tvvergi"
        android:layout_alignStart="@id/activity_update_arac_tvvergi"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="137dp"
        android:inputType="date"
        android:maxLength="100"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/activity_update_arac_btsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/activity_update_arac_etvergi"
        android:layout_alignParentBottom="true"
        style="?android:attr/borderlessButtonStyle"
        android:drawableStart="@drawable/ic_action_done"
        android:text="@string/AracEkle"/>

    <Button
        android:id="@+id/activity_update_arac_btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:drawableStart="@drawable/ic_action_back"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@id/activity_update_arac_etvergi"
        android:layout_alignRight="@id/activity_update_arac_etvergi"
        tools:ignore="RtlHardcoded"
        android:text="@string/GeriGel"/>

</RelativeLayout>